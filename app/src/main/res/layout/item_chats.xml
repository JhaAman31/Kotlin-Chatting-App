<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    app:cardElevation="1dp">
    <!--    android:background="?simpleItemSelectedRippleColor"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_circle"
            app:civ_border_color="#8D000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/user_img"
            android:fontFamily="sans-serif-medium"
            android:padding="2dp"
            android:text="Naruto"
            android:letterSpacing=".1"
            android:textColor="@color/app_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_last_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toEndOf="@id/user_img"
            android:text="Hey there! I am using K-Chat" />

        <TextView
            android:id="@+id/item_last_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            tool:text="12:00 pm"
            tool:ignore="SmallSp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>


